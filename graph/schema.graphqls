# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type HostStatus {
  id: ID!
  tower: String!
  board_reached: String!
  tower_reached: String!
  boot_time: String!
  reboots: Int!
  used_ram: String!
  used_disk: String!
  cpu: String!
  reachable: Boolean!
  temperature: String!
}

type Query {
  hosts: [HostStatus!]!
}